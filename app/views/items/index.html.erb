<div class="container">
  <%= render 'searchbar_items'%>
  <div class="title">
    <h2>My Closet</h2>

  <div class="row">
    <div class="col-index mx-auto">
      <% if @items.any? %>
        <% @items.each do |item| %>
          <%= render "items/cards", item: item %>
        <% end %>
      <% else %>
        <p>No results in your closet</p>
      <% end %>

      <% if @friends_items %>
      <p><em>Found in your friends closets:<em></p>
        <% @friends_items.each do |item| %>
          <%= render "items/cards", item: item %>
        <% end %>
      <% end %>
      </div>
    </div>
  </div>
</div>
