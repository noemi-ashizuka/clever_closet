<%= simple_form_for [@item, @donation] do |f| %>
  <div class="form-inputs">
    <%= f.input :pick_up_date, as: :date, html5: true %>
    <%= f.input :full_name %>
    <%= f.input :address %>
  </div>
  <div class="form-actions">
    <%= f.submit "Donate", class: 'btn btn-red' %>
  </div>
<% end %> 