let lookId = '<%= @look.id %>'

function refreshUpvote(lookId, innerHTML) {
  const upvoteSize = document.querySelector(`.upvote[data-id='${lookId}']`);
    upvoteSize.innerHTML = innerHTML;

  const voteIcon = document.querySelector(`.vote-icon[data-id='${lookId}']`);
  voteIcon.classList.add('gray-icon');
}

refreshUpvote(lookId, '<%= j render "looks/upvote_size", look: @look %>');