<% if current_user.id == params[:id].to_i %>
  <div class = row >
    <div class="col-5">
    <%= render "users/avatar_profile" %>
    </div>
    <!-- link to setting -->
   <!--  <div class="row"> -->
      <div class="col-7">
        <div class="gear">
          <%= link_to user_link_path(@user) do %>
          <i class="fas fa-cog"></i>
          <% end %>
        </div>
        <div class ="user_name" >
          <h1 id = "headerfont"><%= @user.username %></h1>
        </div>
          <div class = "btn btn-red-wide my-2">
            <% if  @user.items.size.to_i >= @user.items_limit.to_i %>
            <p>over <%= @user.items.size.to_i - @user.items_limit.to_i %> items</p>
            <% else %>
            <%= @user.items.size %>/ <%= @user.items_limit %>
            <% end %>
          </div>
        <!-- </div> -->
       <!--  <div class="col-6"> -->
          <div class = "btn btn-red-wide my-2">
          <!-- after adding merit -->
            <p><%= @user.points %> points</p>
          </div>
          <div>
            <% if @user.badges.present? %>
            <%= image_tag (@user.badges.last.custom_fields[:image]), class: "badge-small" %>
            <%= @user.badges.last.name %>
          <% else %>
            <%= "" %>
          <% end %>
          </div>

       <!--  </div> -->
      </div>
    </div>

    <div class = "btn btn-white-wide my-3">
    <!-- link to looks -->
    <%= link_to "create a look", new_look_path %>
    </div>
  </div>
  <div class = "tab">
    <%= render "users/tab" %>
  </div>
<% else %>
    <div class = row >
    <div class="col-5">
    <%= render "users/avatar_profile" %>
    </div>
    <!-- link to setting -->
   <!--  <div class="row"> -->
      <div class="col-7">
        <div class ="user_name" >
          <h1 id = "headerfont"><%= @user.username %></h1>
        </div>
          <div class = "btn btn-red-wide my-2">
            <%= @user.items.size %>/ <%= @user.items_limit %>
          </div>
        <!-- </div> -->
       <!--  <div class="col-6"> -->
          <div class = "btn btn-red-wide my-2">
          <!-- after adding merit -->
            <p><%= @user.points %> point</p>
            </%>
          </div>
       <!--  </div> -->
      </div>
    </div>
    <div class = "btn btn-white-wide my-3">
    <!-- link to looks -->
    <%= link_to "create looks", new_user_look_path(params[:id]) %>
    </div>
  </div>
  <div class = "tab">
    <%= render "users/friend_tab" %>
  </div>
<% end %>

