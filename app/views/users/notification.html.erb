<% @notifications.each do |notification|%>
<div class="notification_card">
  <div class="row">
    <% if User.find(notification.actor_id).username != current_user.username %>
      <div class="col-3">
        <% if User.find(notification.actor_id).photo.attached? %>
          <%= cl_image_tag User.find(notification.actor_id).photo.key, height: 250, width: 300, crop: :fill, class: "avatar-profile" %>
        <% end %>
      </div>
      <div class="col-5 username">
        <p><%= notification.notify_type%> from <%= User.find(notification.actor_id).username %></p>
      </div>
      <div class="col-4">
      <%= link_to "link", main_app.look_path(notification.target), class: 'btn-red-thick-small' %>
    </div>
    <% end %>
  </div>
</div>
<% end %>
<div class="clean_notifications justify-content-right">
  <%= link_to t('notifications.clean_all'), notifications.clean_notifications_path, class: 'btn-remove-white', method: 'delete' %>
</div>
