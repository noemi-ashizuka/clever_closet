<%= form_tag users_path, method: :get do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find a friend"
  %>
  <%= submit_tag "Search" %>
<% end %>


<% @users.each do |user| %>
  <%= user.username %>
  <% if user.photo.attached? %>
    <%= cl_image_tag user.photo.key height: 250, width: 300, crop: :fill, class: "avatar-profile" %>
  <% else %>
    <%= image_tag 'blank_avatar.png', class: "avatar-profile"%>
  <% end %>
  <%= render "friendship", user: user %>

<% end %>

<% current_user.pending_friends.each do |pending| %>
  <%= pending.username %>

  <%= form_for :pending, url: user_accept_request_path(pending) do |f| %>
      <%= f.submit "accept", class: "btn" %>
  <% end %>

  <%= form_for :pending, url: user_decline_request_path(pending) do |f| %>
      <%= f.submit "reject", class: "btn" %>
  <% end %>

<% end %>
